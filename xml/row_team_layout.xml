<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rank_label"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="#"
        android:textColor="@color/darkGray"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/name_label"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="left|center"
        android:layout_toRightOf="@id/rank_label"
        android:text="TEAM NAME"
        android:textColor="@color/darkGray"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/played_label"
            style="@style/TeamStatsLabel"
            android:text="P"/>

        <TextView
            android:id="@+id/wins_label"
            style="@style/TeamStatsLabel"
            android:text="W"/>

        <TextView
            android:id="@+id/draws_label"
            style="@style/TeamStatsLabel"
            android:text="D"/>

        <TextView
            android:id="@+id/goalsfor_label"
            style="@style/TeamStatsLabel"
            android:text="GF"/>

        <TextView
            android:id="@+id/goalsagainst_label"
            style="@style/TeamStatsLabel"
            android:text="GA"/>


        <TextView
            android:id="@+id/points_label"
            style="@style/TeamStatsLabel"
            android:text="PTS"/>
    </LinearLayout>


    <include layout="@layout/divider_table"/>

</RelativeLayout>