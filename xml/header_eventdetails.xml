<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <!--Background-->
    <!--<ImageView-->
        <!--android:layout_height="140dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:src="@drawable/stadium_blur"-->
        <!--android:scaleType="centerCrop"-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android">-->
    <!--</ImageView>-->

    <!--Score label-->

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text=""
        android:gravity="center"
        android:textColor="#ffffffff"
        android:fontFamily="sans-serif-light"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"/>

    <TextView
        android:id="@+id/displayLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text=""
        android:gravity="center"
        android:layout_centerInParent="true"
        android:paddingTop="7dp"
        android:textColor="#ffffffff"
        android:fontFamily="sans-serif-light"/>


    <!--//////////////////////////////////////////-->


    <!--Home Short summary-->
    <LinearLayout
        android:id="@+id/home_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ShortSummary.Home"
        android:layout_marginTop="50dp">

        <include layout="@layout/summary_type"/>
        <include layout="@layout/shortummary"></include>
    </LinearLayout>


    <!--Home Badge with label-->
    <RelativeLayout
        android:id="@+id/homeBadgeContainer"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/displayLabel"
        android:layout_centerVertical="true">

        <!--Home Badge + Label-->
        <include android:id="@+id/home_side"
            layout="@layout/badge_with_label"/>

        <include android:id="@+id/home_forms"
            layout="@layout/forms"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_summary"
        android:layout_toLeftOf="@id/displayLabel">


    </RelativeLayout>

    <!--//////////////////////////////////////////-->


    <!--Away Short summary-->
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ShortSummary.Away"
        android:id="@+id/away_summary"
        android:layout_marginTop="50dp">

        <include layout="@layout/shortummary"></include>
        <include layout="@layout/summary_type"/>
    </LinearLayout>


    <!--Away Badge with label-->
    <RelativeLayout
        android:id="@+id/awayBadgeContainer"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/displayLabel"
        android:layout_centerVertical="true">

        <include android:id="@+id/away_side"
            layout="@layout/badge_with_label"/>

        <include android:id="@+id/away_forms"
            layout="@layout/forms"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/away_summary"
        android:layout_toRightOf="@id/displayLabel">



    </RelativeLayout>

</RelativeLayout>