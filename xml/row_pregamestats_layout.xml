<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <View
        android:id="@+id/divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_toLeftOf="@id/divider"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toLeftOf="@id/divider"
            android:layout_centerVertical="true"
            android:background="@color/gray">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_toLeftOf="@id/divider"
            android:layout_centerVertical="true"
            android:weightSum="1">

            <View
                android:id="@+id/home_stats_deadspace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="0.25"/>

            <View
                android:id="@+id/home_stats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/orange"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_weight="0.75"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_toRightOf="@id/divider"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toLeftOf="@id/divider"
            android:layout_centerVertical="true"
            android:background="@color/gray">
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_toLeftOf="@id/divider"
            android:layout_centerVertical="true"
            android:weightSum="1">

            <View
                android:id="@+id/away_stats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/lightGray"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_weight="0.75"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/left_label"
        android:layout_marginLeft="16dp"
        style="@style/AutoSize.PreGameStats"
        android:text="55%"/>

    <TextView
        android:id="@+id/right_label"
        android:layout_marginRight="16dp"
        style="@style/AutoSize.PreGameStats"
        android:layout_alignParentEnd="true"
        android:text="55%"/>

    <TextView
        android:id="@id/label"
        style="@style/AutoSize"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/darkGray"
        android:textSize="14sp"
        android:text="Over 2.5"
        android:fontFamily="sans-serif-light"/>

    <include layout="@layout/divider_table"/>

</RelativeLayout>