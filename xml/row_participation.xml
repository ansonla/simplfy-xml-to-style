<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/shirt_label"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="1"
        android:textSize="14sp"
        android:textColor="@color/orange"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/shirt_label">

        <TextView
            android:id="@+id/team_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:layout_toRightOf="@id/shirt_label"
            android:text="Real Madrid"
            android:textSize="14sp"
            android:textColor="@color/orange"
            android:fontFamily="sans-serif-light"/>


        <TextView
            android:id="@+id/position_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/shirt_label"
            android:text="Defence, Midfield"
            android:textSize="12sp"
            android:textColor="@color/lightGray"
            android:textStyle="italic"
            android:fontFamily="sans-serif-light"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/appearence_label"
            android:layout_width="30dp"
            android:text="165"
            style="@style/PositionLabel"/>

        <TextView
            android:id="@+id/goals_label"
            android:layout_width="30dp"
            android:text="10"
            style="@style/PositionLabel"/>

        <TextView
            android:id="@+id/assists_label"
            android:layout_width="30dp"
            android:text="9"
            style="@style/PositionLabel"/>

        <TextView
            android:id="@+id/rc_label"
            android:layout_width="30dp"
            android:text="9"
            style="@style/PositionLabel"/>

        <TextView
            android:id="@+id/yc_label"
            android:layout_width="30dp"
            android:text="66"
            style="@style/PositionLabel"/>

    </LinearLayout>


    <include layout="@layout/divider_table"/>
</RelativeLayout>