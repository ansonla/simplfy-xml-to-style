<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/position_label"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="D"
        android:textSize="14sp"
        android:textColor="@color/darkGray"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/position_label"
        android:layout_centerVertical="true"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/name_label"
            style="@style/AutoSize.SquadLabel"
            android:text="Diego Costa"
            android:layout_marginBottom="4dp"/>


        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:gravity="left|center"-->
        <!--android:textSize="14sp"-->
        <!--android:textColor="@color/darkGray"-->

        <TextView
            android:id="@+id/country_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_label"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="Spain"
            android:fontFamily="sans-serif-light"/>￼￼

    </LinearLayout>
  ￼
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/shirt"/>

                <TextView
                    android:id="@+id/shirt_label"
                    style="@style/AutoSize.SquadLabel.Stats"
                    android:text="19"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="3dp"
                    android:src="@drawable/age_type1"/>

                <TextView
                    android:id="@+id/age_label"
                    style="@style/AutoSize.SquadLabel.Stats"
                    android:text="26"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/height"/>

                <TextView
                    android:id="@+id/height_label"
                    style="@style/AutoSize.SquadLabel.Stats"
                    android:text="183cm"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/weight"/>

                <TextView
                    android:id="@+id/weight_label"
                    style="@style/AutoSize.SquadLabel.Stats"
                    android:text="72kg"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/divider_table"/>
</RelativeLayout>