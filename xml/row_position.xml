<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/position_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="Midfield"
        android:textSize="14sp"
        android:textColor="@color/darkGray"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/appearence_label"
            android:layout_width="30dp"
            android:text="165"
            style="@style/PositionLabel"/>

        <TextView
            android:id="@+id/goals_label"
            android:layout_width="30dp"
            android:text="10"
            style="@style/PositionLabel"/>

        <TextView
            android:id="@+id/assists_label"
            android:layout_width="30dp"
            android:text="9"
            style="@style/PositionLabel"/>

        <TextView
            android:id="@+id/rc_label"
            android:layout_width="30dp"
            android:text="9"
            style="@style/PositionLabel"/>

        <TextView
            android:id="@+id/yc_label"
            android:layout_width="30dp"
            android:text="66"
            style="@style/PositionLabel"/>

    </LinearLayout>

    <include layout="@layout/divider_table"/>
</RelativeLayout>