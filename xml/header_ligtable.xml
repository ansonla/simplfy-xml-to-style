<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/darkGray">

    <TextView
        android:id="@+id/rank_label"
        style="@style/TableRank.Header"/>

    <TextView
        android:id="@+id/name_label"
        android:layout_toRightOf="@id/rank_label"
        style="@style/TableName.Header"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="13dp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/played_label"
            android:text="P"
            style="@style/TableStats.Header"/>

        <TextView
            android:id="@+id/wins_label"
            android:text="W"
            style="@style/TableStats.Header"/>

        <TextView
            android:id="@+id/draws_label"
            android:text="D"
            style="@style/TableStats.Header"/>

        <TextView
            android:id="@+id/goalsfor_label"
            android:text="GF"
            style="@style/TableStats.Header"/>

        <TextView
            android:id="@+id/goalsagainst_label"
            android:text="GA"
            style="@style/TableStats.Header"/>

        <TextView
            android:id="@+id/points_label"
            android:text="Pts"
            style="@style/TableStats.Header"/>

    </LinearLayout>

</RelativeLayout>