<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <!--<com.andexert.library.RippleView-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:ripple="http://schemas.android.com/apk/res-auto"-->
        <!--android:id="@+id/ripple"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--ripple:rv_color="@color/orange">-->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/displayLabel"
            android:layout_marginBottom="3dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginRight="3dp"
                android:textSize="14sp"
                android:text="@string/icon_clock_o"
                android:textColor="@color/darkGray"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/timeElapsedLabel"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="@string/icon_trophy"
                android:textColor="@color/darkGray"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/displayLabel"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerInParent="true"
            android:gravity="center"

            style="@style/displayLabel_inProgress"
            android:text=" - "/>

        <ImageView
            android:id="@+id/homeLogo"
            android:layout_toLeftOf="@+id/displayLabel"
            style="@style/EventListBadge"/>

        <ImageView
            android:id="@+id/awayLogo"
            android:layout_toRightOf="@+id/displayLabel"
            style="@style/EventListBadge"/>

        <TextView
            android:id="@+id/homeLabel"
            android:layout_toLeftOf="@+id/homeLogo"
            style="@style/EventListTeamLabel"
            android:gravity="center_vertical|right"
            android:text="HOME"/>

        <TextView
            android:id="@+id/awayLabel"
            android:layout_toRightOf="@+id/awayLogo"
            style="@style/EventListTeamLabel"
            android:gravity="center_vertical|left"
            android:text="AWAY"/>



    <!--</com.andexert.library.RippleView>-->
</RelativeLayout>